<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marcinbuczkowski.bluetoothchat.SettingsActivity">


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Text"
        android:layout_span="4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/turnOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on"
        android:layout_column="1"
        android:layout_below="@+id/text"
        android:layout_alignParentLeft="true" />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="visible"
        android:text="@string/Visible"
        android:layout_column="3"
        android:layout_below="@+id/text"
        android:layout_toRightOf="@+id/turnOn" />


    <Button
        android:id="@+id/paired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/List"
        android:layout_column="1"
        android:layout_below="@+id/turnOn"
        android:layout_alignParentLeft="true" />

    <Button
    android:id="@+id/search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/Find"
        android:layout_toEndOf="@+id/paired"
        android:layout_toStartOf="@+id/paired"
        android:layout_column="2"
        android:layout_alignTop="@+id/paired"
        android:layout_toRightOf="@+id/paired" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/receiversSpinner"
        android:layout_below="@id/paired"/>


</RelativeLayout>
